{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "Electron application built with GitHub Actions",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win --ia32"
  },
  "build": {
    "appId": "com.yourcompany.electron-app",
    "productName": "Electron App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "arch": "ia32"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "36.5.0",
    "electron-builder": "^24.6.4"
  }
}