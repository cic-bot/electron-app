{
  "name": "electron-app",
  "version": "36.5.0",
  "description": "Electron application built with GitHub Actions",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win-ia32": "electron-builder --win --ia32",
    "build-win-x64": "electron-builder --win --x64",
    "build-win": "electron-builder --win --ia32 --x64"
  },
  "build": {
    "appId": "com.cic-bot.electron-app",
    "productName": "ElectronApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "36.5.0",
    "electron-builder": "^24.6.4"
  }
}